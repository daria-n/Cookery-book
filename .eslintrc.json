{
  "extends": "eslint:recommended",
  "globals": {
    "angular": true,
    "process": true,
    "document": true,
    "__dirname": true
  },
  "env": {
    "amd": true
  },
  "rules": {
    "indent": ["error", 4],
    "semi": ["error", "always"],
    "quotes": ["error", "single", "avoid-escape"],
    "no-console": "warn"
  }
}
